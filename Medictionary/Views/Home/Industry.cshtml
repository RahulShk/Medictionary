@model List<Medictionary.Models.Industry>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info text-center mt-5" style="color: #414464; font-weight: bold;">
        <p>No products available at the moment.</p>
    </div>
}
else
{
    <div class="container my-5">
        <div class="row row-cols-1 row-cols-md-4 g-4">
            @foreach (var industry in Model)
            {
                <div class="col">
                    <div class="card" style="border: none; border-radius: 15px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);">
                        <div class="card-body text-center" style="padding: 20px;">
                            <h5 class="card-title" style="color: #414464; font-weight: bold;">@industry.Name</h5>
                            <p class="card-text" style="color: #414464; font-weight: bold;"> @industry.Location</p>
                            <p class="card-text" style="color: #414464; font-size: 0.9em;">
                                @industry.Description
                            </p>
                            <!-- Button -->
                            <button class="btn btn-tertiary custom-btn view-details-btn" data-industry-id="@industry.ID">View Medicine Details</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

<!-- Modal -->
            <div class="modal-body">
                <div id="medicineDetails"></div>
            </div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.view-details-btn').on('click', function() {
                var industryId = $(this).data('industry-id');
                $.ajax({
                    url: '/Home/GetMedicines',
                    type: 'GET',
                    data: { industryId: industryId },
                    success: function(data) {
                        $('#medicineDetails').html(data); // Populate the modal with the fetched data
                        $('#detailsModal').modal('show'); // Show the modal
                    },
                    error: function(xhr, status, error) {
                        console.error("AJAX Error:", xhr.responseText); // Log the error
                        alert('Error retrieving medicine details.');
                    }
                });
            });
        });
    </script>
}