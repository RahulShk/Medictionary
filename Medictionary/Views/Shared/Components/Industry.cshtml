@model Medictionary.Models.Industry

@if (Model != null)
{
    <section id="industry" class="industry">
        <div class="container" data-aos="fade-up">

            <div class="section-header">
                <h2>Industry Details</h2>
                <p>Discover more about the <span>@Model.Name</span> industry</p>
            </div>

            <div class="row gy-4">

                <div class="col-md-6">
                    <div class="info-item d-flex align-items-center">
                        <i class="icon bi bi-building flex-shrink-0"></i>
                        <div>
                            <h3>Industry Name</h3>
                            <p>@Model.Name</p>
                        </div>
                    </div>
                </div><!-- End Info Item -->

                <div class="col-md-6">
                    <div class="info-item d-flex align-items-center">
                        <i class="icon bi bi-geo-alt flex-shrink-0"></i>
                        <div>
                            <h3>Location</h3>
                            <p>@Model.Location ?? "Location not specified"</p>
                        </div>
                    </div>
                </div><!-- End Info Item -->

                <div class="col-md-12">
                    <div class="info-item d-flex align-items-center">
                        <i class="icon bi bi-card-text flex-shrink-0"></i>
                        <div>
                            <h3>Description</h3>
                            <p>@(string.IsNullOrEmpty(Model.Description) ? "No description available" : Model.Description)</p>
                        </div>
                    </div>
                </div><!-- End Info Item -->

            </div>
        </div>
    </section>
}
else
{
    <div class="container">
        <p class="text-danger">Industry details are not available.</p>
    </div>
}
