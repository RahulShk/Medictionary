@model Medictionary.Models.User

<section id="user-profile" class="user-profile section-bg py-5">
    <div class="container" data-aos="fade-up">
        <div class="section-header text-center mb-5">
            <h2 class="display-5 fw-bold">User Profile</h2>
            <p class="lead">Detailed Overview of <span class="text-primary">@Model.Name</span></p>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="profile-card shadow-lg rounded-4 overflow-hidden">
                    <div class="profile-header position-relative">
                        @if (Model.ProfileImage != null)
                        {
                            <img src="/@Url.Content(Model.ProfileImage.FilePath)" 
                                 class="profile-image img-fluid"
                                 alt="@Model.Name"
                                 style="height: 320px; object-fit: cover;">
                        }
                    </div>

                    <div class="profile-content p-4 bg-light">
                        <div class="user-bio">
                            <div class="row g-4 mb-4">
                                <h1 class="display-6 fw-bold mb-2 text-white">@Model.Name</h1>
                                <div class="d-flex align-items-center justify-content-center gap-2">
                                    <i class="bi bi-envelope fs-5"></i>
                                    <a href="mailto:@Model.Email" class="text-white">@Model.Email</a>
                                </div>
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center gap-3">
                                        <i class="bi bi-geo-alt fs-3 text-primary"></i>
                                        <div>
                                            <h5 class="mb-0 fw-bold">Address</h5>
                                            <p class="mb-0 text-muted">@Model.Address</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center gap-3">
                                        <i class="bi bi-telephone fs-3 text-primary"></i>
                                        <div>
                                            <h5 class="mb-0 fw-bold">Contact</h5>
                                            <p class="mb-0 text-muted">@Model.ContactNo</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .profile-card {
        background: white;
        transition: transform 0.3s ease;
        border: 1px solid rgba(0,0,0,0.1);
    }

    .profile-header {
        position: relative;
        overflow: hidden;
    }

    .profile-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        color: white;
        background: linear-gradient(transparent, rgba(0,0,0,0.7));
    }

    .profile-image {
        width: 100%;
        transition: transform 0.3s ease;
    }

    .profile-card:hover {
        transform: translateY(-5px);
    }

    .profile-card:hover .profile-image {
        transform: scale(1.03);
    }

    .user-bio {
        border-top: 2px solid rgba(13, 110, 253, 0.1);
        padding-top: 1.5rem;
        margin-top: 1rem;
    }

    .profile-content {
        background: linear-gradient(145deg, #f8f9fa 0%, #ffffff 100%);
    }

    @@media (max-width: 768px) {
        .profile-image {
            height: 250px !important;
        }
        
        .display-6 {
            font-size: 1.8rem;
        }
    }
</style>