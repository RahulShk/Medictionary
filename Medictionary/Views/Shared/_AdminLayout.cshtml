<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin</title>
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    <link href="~/assets/css/main.css" rel="stylesheet">
    <link href="~/css/_AdminLayout.css" rel="stylesheet">
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="navbar-container d-flex justify-content-between align-items-center">
            <a class="navbar-brand" href="/Admin">
                <img src="~/img/Logo.png" alt="Medictionary Logo" class="main-logo">
            </a>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Index">Industries</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="ManageStockiestRequests">Stockiests</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Users">Users</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Settings">Settings</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Identity" asp-action="LogOut">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <footer>
        <!-- Your footer content -->
    </footer>

    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>