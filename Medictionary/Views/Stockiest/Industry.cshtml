@model List<Medictionary.Models.Industry>

@{
    Layout = "_StockiestLayout";
}
@if (Model == null || !Model.Any())
{
    <div class="alert alert-info text-center mt-5" style="color: #414464; font-weight: bold;">
        <p>No industries available at the moment.</p>
    </div>
}
else
{
    <div class="container my-5">
        <div class="industry-grid">
            @foreach (var industry in Model)
            {
                <div class="industry-card">
                    <div class="industry-details">
                        <h3>@industry.Name</h3>
                        <p><strong>Location:</strong> @industry.Location</p>
                        <p class="industry-description">@industry.Description</p>
                        <button class="btn btn-tertiary custom-btn view-details-btn" data-industry-id="@industry.IndustryId">
                            View Medicine Details
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
}

<!-- Modal -->
<div id="detailsModal" class="modal-overlay">
    <div class="modal-content">
        <div class="modal-header">
            <button class="close-btn" id="closeModal">&times;</button>
        </div>
        <div id="medicineDetails"></div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.modal-overlay').hide(); // Ensure modal is hidden initially

            // Open modal when clicking "View Medicine Details" button
            $('.view-details-btn').on('click', function () {
                var industryId = $(this).data('industry-id');
                
                $.ajax({
                    url: '@Url.Action("GetMedicines", "Stockiest")',
                    type: 'GET',
                    data: { industryId: industryId },
                    success: function (data) {
                        $('#medicineDetails').html(data); // Load data into modal
                        $('.modal-overlay').fadeIn(); // Show modal
                    },
                    error: function () {
                        alert('Failed to load medicine details.');
                    }
                });
            });

            // Close modal when clicking close button
            $('#closeModal').on('click', function () {
                $('.modal-overlay').fadeOut();
            });

            // Close modal when clicking outside modal-content
            $('.modal-overlay').on('click', function (e) {
                if ($(e.target).closest('.modal-content').length === 0) {
                    $('.modal-overlay').fadeOut();
                }
            });
        });
    </script>
}

<style>
    /* Industry Grid Layout */
    .industry-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr); /* Three columns */
        gap: 20px;
        padding: 20px;
    }

    /* Industry Card */
    .industry-card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding: 15px;
    }

    /* Industry Image */
    .industry-image img {
        width: 100%;
        height: 180px;
        object-fit: cover;
        border-radius: 10px;
    }

    /* Industry Details */
    .industry-details {
        margin-top: 10px;
    }

    .industry-details h3 {
        color: #333;
        font-size: 18px;
        margin-bottom: 5px;
    }

    .industry-details p {
        font-size: 14px;
        color: #666;
        margin: 5px 0;
    }

    /* Modal Styling */
    .modal-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.8);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1000;
    }

    .modal-content {
        background: #fff;
        padding: 30px;
        border-radius: 10px;
        width: 70%;
        max-width: 900px;
        max-height: 80vh;
        overflow-y: auto;
        position: relative;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Close Button */
    .modal-header {
        position: absolute;
        top: 10px;
        right: 10px;
    }

    .close-btn {
        background: transparent;
        border: none;
        font-size: 24px;
        font-weight: bold;
        cursor: pointer;
        color: #414464;
    }

    @* /* Responsive Design */
    @media (max-width: 992px) {
        .industry-grid {
            grid-template-columns: repeat(2, 1fr); /* Two columns */
        }
    }

    @media (max-width: 768px) {
        .industry-grid {
            grid-template-columns: repeat(1, 1fr); /* One column */
        } *@
    }
</style>
