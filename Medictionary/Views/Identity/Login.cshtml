@model LoginDTO

@{
    ViewData["Title"] = "Log in";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/reglogin.css" />


<div class="login-container">
    <div class="logo">
        <img src="@Url.Content("~/img/Logo.png")" alt="Medictionary Logo" />
    </div>
    <form id="account" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="Username" class="form-control" placeholder="Enter your email" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="remember-me">
            @* <div>
                <input asp-for="RememberMe" />
                <label asp-for="RememberMe">Remember me</label>
            </div> *@
            <a href="/Account/ForgotPassword">Forgot password?</a>
        </div>
        <button type="submit" class="btn-primary">Login now</button>
    </form>
    <div class="login-links">
        <a asp-controller="Identity" asp-action="Register">Signup now</a>
    </div>
</div>
